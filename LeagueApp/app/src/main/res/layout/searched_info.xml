<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="RandomUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="16dp"
        android:id="@+id/summonerNameTextView"
        android:textAllCaps="false"
        tools:textSize="24sp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summonerNameTextView"
        android:layout_alignStart="@+id/summonerNameTextView"
        android:layout_marginTop="23dp"
        android:id="@+id/UserInfoTextView"
        android:textSize="14sp" />

    <Button
        android:text="Get"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/summonerNameTextView"
        android:layout_toEndOf="@+id/summonerNameTextView"
        android:layout_marginStart="37dp"
        android:id="@+id/getRequestButton" />

</RelativeLayout>